<UserControl x:Class="KinectInterface.Pages.InstructionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        	 xmlns:m="http://metro.mahapps.com/winfx/xaml/controls"
       		 mc:Ignorable="d"
        	 d:DesignWidth="1920" d:DesignHeight="1080"
             Width="1920" Height="1080"
             Background="White">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" x:Name="Message" Margin="50"
                   FontSize="{DynamicResource HeaderFontSize}" FontWeight="Light"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextWrapping="Wrap"/>
        <m:ProgressRing DockPanel.Dock="Bottom" x:Name="ProgressRing" Width="120" Height="120" Margin="0, 20, 0, 100" IsActive="True"/> 
        <Canvas>
            
        </Canvas>        
    </DockPanel>
</UserControl>
