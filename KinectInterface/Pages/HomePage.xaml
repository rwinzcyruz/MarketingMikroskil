<UserControl x:Class="KinectInterface.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="1920"
             Height="1080"
             Background="#7FFFFFFF">

    <DockPanel>
        <Label Content="BERANDA" DockPanel.Dock="Top" Template="{DynamicResource TitleBarTemplate}">
            <Label.Resources>
                <VisualBrush x:Key="_icon" Visual="{DynamicResource appbar_home}"/>
            </Label.Resources>
        </Label>

        <UniformGrid Columns="2" Button.Click="Navigate_Click" Margin="30,30,0,0">
            <Button x:Name="_btnProfile" Content="profil" Grid.Column="0" Template="{DynamicResource BoxButtonTemplate}">
                <Button.Resources>
                    <VisualBrush x:Key="_icon" Visual="{DynamicResource appbar_book}"/>
                </Button.Resources>
            </Button>
            <Button x:Name="_btnGame" Content="permainan" Grid.Column="1" Template="{DynamicResource BoxButtonTemplate}">
                <Button.Resources>
                    <VisualBrush x:Key="_icon" Visual="{DynamicResource appbar_xbox}"/>
                </Button.Resources>
            </Button>
        </UniformGrid>
    </DockPanel>
</UserControl>
