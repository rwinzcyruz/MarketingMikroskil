<UserControl x:Class="KinectInterface.Pages.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="1920"
             Height="1080"
             Background="White"
             PreviewKeyDown="Arrow_PreviewKeyDown" 
             KeyDown="Arrow_PreviewKeyDown">

    <UserControl.Resources>
        <Image x:Key="bg" Source="/KinectInterface;component/Images/college.jpg">
            <Image.OpacityMask>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Offset="0.0" Color="Transparent"/>
                    <GradientStop Offset="2.0" Color="White"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
    </UserControl.Resources>

    <DockPanel>
        <DockPanel.Background>
            <VisualBrush Visual="{StaticResource bg}"/>
        </DockPanel.Background>

        <Label Content="PROFIL" DockPanel.Dock="Top" Template="{DynamicResource TitleBarTemplate}">
            <Label.Resources>
                <VisualBrush x:Key="_icon" Visual="{DynamicResource appbar_book}"/>
            </Label.Resources>
        </Label>

        <Grid x:Name="ProfileGrid"></Grid>
    </DockPanel>
</UserControl>
