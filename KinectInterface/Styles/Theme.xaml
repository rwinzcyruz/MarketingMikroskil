<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:my="clr-namespace:Beginning.Kinect.Framework.Controls;assembly=Beginning.Kinect.Framework">

    <SolidColorBrush x:Key="TransparentBrush" Color="{DynamicResource AccentColor}" Opacity="0.1"/>
    <SolidColorBrush x:Key="SemiTransparentBrush" Color="{DynamicResource AccentColor}" Opacity="0.4"/>
    <SolidColorBrush x:Key="SolidBrush" Color="{DynamicResource AccentColor}"/>
    
    <ControlTemplate x:Key="BoxButtonTemplate" TargetType="Button">
        <Border Name="Border" Background="Transparent" SnapsToDevicePixels="True"
                BorderBrush="Transparent" BorderThickness="2" Margin="0,0,30,30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle Width="100" Height="100" Fill="{DynamicResource _icon}"/>
                <ContentPresenter TextBlock.FontSize="{DynamicResource HeaderFontSize}"
                                  TextBlock.FontWeight="Light"
                                  RecognizesAccessKey="True"/>
            </StackPanel>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SemiTransparentBrush}"/>
                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SolidBrush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="ImageButtonTemplate" TargetType="my:HoverButton" >
        <Border Name="Border" Background="Gray" Opacity="0.5" BorderBrush="Transparent"
                BorderThickness="4" Margin="0,0,30,30" SnapsToDevicePixels="True" RenderOptions.EdgeMode="Aliased">
            <Canvas Width="500" ClipToBounds="True">
                <Polygon Points="0,0 500,0 500,60 0,300" Fill="{DynamicResource _hover}"/>
                <Polygon Points="0,900 500,900 500, 700" Fill="{DynamicResource _hover}"/>
                <StackPanel Margin="10,0" Width="500">
                    <TextBlock Text="{TemplateBinding Tag}" TextWrapping="Wrap"
                               FontWeight="Light" FontSize="{DynamicResource SubHeaderFontSize}" Foreground="White"/>
                </StackPanel>
                <TextBlock Text="{TemplateBinding Content}" Canvas.Right="25" Canvas.Bottom="10"
                                  TextBlock.FontSize="{DynamicResource HeaderFontSize}" Foreground="White"/>
            </Canvas>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="Opacity" Value="1"/>
                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource _hover}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="TitleBarTemplate" TargetType="Label">
        <Border Background="#CCFFFFFF" SnapsToDevicePixels="True"
                BorderBrush="{DynamicResource SolidBrush}" BorderThickness="0,0,0,2">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Rectangle VerticalAlignment="Center" Width="70" Height="70" Margin="0,10,30,0" Fill="{DynamicResource _icon}"/>
                <ContentPresenter TextBlock.FontSize="{DynamicResource TitleFontSize}"
                                  TextBlock.FontWeight="Light"/>
            </StackPanel>
        </Border>
    </ControlTemplate>

