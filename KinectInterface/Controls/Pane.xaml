<UserControl x:Class="KinectInterface.Controls.Pane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:KinectInterface.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock FontWeight="Light" Text="{Binding Label, RelativeSource={RelativeSource FindAncestor, AncestorType=c:Pane}}"/>
        <TextBlock Text="{Binding Value, RelativeSource={RelativeSource FindAncestor, AncestorType=c:Pane}}"/>
    </StackPanel>
</UserControl>